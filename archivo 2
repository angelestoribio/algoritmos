};

int BUSCAR_ID_VEHICULO(char vehiculo[20])
{ FILE *ptr=fopen("Venta.dat","rb"); 
RegVenta reg;
fread(&reg,sizeof(reg),1,ptr);
int c=0;
while (!feof(ptr))
{ if(strcmp(vehiculo,reg.IdVehiculo)==0)
{
c=c+reg.Cantidad;
}
fread(&reg,sizeof(reg),1,ptr);
}

fclose(ptr);
return(c);
}
RegProducto BUSCAR_PRODUCTO(char x[20])

{ 
FILE *ptr=fopen("Producto.dat","rb"); 
RegProducto reg;
fread(&reg,sizeof(reg),1,ptr);
int c=0;
while (!feof(ptr) || strcmp(x,reg.IdProd)!=0 )
{ 

fread(&reg,sizeof(reg),1,ptr);

}

fclose(ptr);
return(reg);
}

int FECHA_DAT(char xxx[])

{
char *ptr;
int dia, mes, año,s;
ptr = strtok(xxx, "/" );
dia = atoi(ptr);
ptr = strtok( NULL, "/" );
mes = atoi(ptr);
ptr = strtok( NULL, "/" );
año = atoi(ptr);
s=año*100;
s=s+mes;
s=s*100;
s=s+dia;
return(s);
}
bool fecha(char fecha1[20],char fecha2[20],char fecha3[20])
{ 
int s1,s2,s3;
bool xxx;
s1=FECHA_DAT(fecha1);
s2=FECHA_DAT(fecha2);
s3=FECHA_DAT(fecha3);
if ((s1<s3)&&(s3<s2)){xxx=true;}
else 
{xxx=false;}
return(xxx);
}
int BUSCAR_IDprod(char x[20])
{
FILE *ptr=fopen("Venta.dat","rb"); 
RegVenta reg;
fread(&reg,sizeof(reg),1,ptr);
while (!feof(ptr)|| strcmp(x,reg.IdVehiculo)!=0 )
{ 
}
fclose(ptr);
return(reg.IdProd);
}
