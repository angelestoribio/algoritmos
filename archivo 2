struct RegProducto
{ int IdProd;
char Nombre[20];
int PrecioUnitario;
};

struct RegVenta 
{int IdVenta;
char Fecha;
int Cantidad;
int PrecioUnitario;
char IdVehiculo;
int IdProd;
};

struct RegVehiculo
